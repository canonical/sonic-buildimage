{# If our configuration has VLAN interfaces... #}
{% if VLAN_INTERFACE %}
{% set vlan_list = dict() %}
{% for (vlan_name, vlan_prefix) in VLAN_INTERFACE|pfx_filter %}
{% set prefix_list = [] %}
{% for (name, prefix) in VLAN_INTERFACE|pfx_filter %}
{# If this VLAN has an IPv6 address... #}
{% if name == vlan_name and prefix | ipv6 %}
{% set _ = prefix_list.append(prefix) %}
{% set _ = vlan_list.update({name: prefix_list}) %}
{% endif %}
{% endfor %}
{% endfor %}
{% endif %}
{% for name, prefixes in vlan_list.items() %}
interface {{ name }}
{
    IgnoreIfMissing on;
    AdvSendAdvert on;
    MinRtrAdvInterval 60;
    MaxRtrAdvInterval 180;
    AdvManagedFlag on;
    AdvOtherConfigFlag off;
    AdvLinkMTU 9100;
    AdvHomeAgentFlag off;
{% for prefix in prefixes %}
    prefix {{ prefix | network }}/{{ prefix | prefixlen }} {
        AdvOnLink on;
        AdvAutonomous off;
        AdvRouterAddr off;
        AdvValidLifetime infinity;
        AdvPreferredLifetime infinity;
    };
{% endfor %}
};

{% endfor %}
