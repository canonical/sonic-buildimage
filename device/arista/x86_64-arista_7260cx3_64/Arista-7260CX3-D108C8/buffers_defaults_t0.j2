{%- set default_cable = '5m' %}
{%- set default_speed = '50G' %}

{%- macro generate_port_lists(PORT_10G, PORT_25G, PORT_40G, PORT_50G, PORT_100G) %}
    {# Generate list of ports #}
    {%- for port_idx in range(0,12) %}
        {%- if PORT_50G.append("Ethernet%d" % (port_idx * 4)) %}{%- endif %}
        {%- if PORT_50G.append("Ethernet%d" % (port_idx * 4 + 2)) %}{%- endif %}
    {%- endfor %}
    {%- for port_idx in range(20,64) %}
        {%- if PORT_50G.append("Ethernet%d" % (port_idx * 4)) %}{%- endif %}
        {%- if PORT_50G.append("Ethernet%d" % (port_idx * 4 + 2)) %}{%- endif %}
    {%- endfor %}
    {%- for port_idx in range(12,20) %}
        {%- if PORT_100G.append("Ethernet%d" % (port_idx * 4)) %}{%- endif %}
    {%- endfor %}
{%- endmacro %}

