#!/usr/bin/env python

import subprocess
import time

def main():
    subprocess.run(['hwclock', '-w', '-f', '/dev/rtc1'])
    time.sleep(1)

    subprocess.run(['i2cset', '-y', '0', '0x36', '0x23', '0'])
    time.sleep(1)
    subprocess.run(['i2cset', '-y', '0', '0x36', '0x23', '1'])

if __name__ == '__main__':
    main()
