[Unit]
Description=Accton AS7926-40XFB Platform Monitoring service
Before=pmon.service
After=sysinit.target
DefaultDependencies=no

[Service]
ExecStartPre=/usr/local/bin/accton_as7926_40xfb_util.py install
ExecStart=/usr/local/bin/accton_as7926_40xfb_monitor.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target

