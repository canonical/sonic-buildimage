[Unit]
Description=Belgite Fan Control service
After=pddf-platform-init.service
Requires=pmon.service
DefaultDependencies=no

[Service]
Type=simple
ExecStart=/usr/local/bin/belgite_fanctld.py
KillSignal=SIGTERM
SuccessExitStatus=0

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
